#:kivy 1.8.0
#pylint: disable=E0001

MainWidget:

    PageLayout:

        BoxLayout:

            size_hint: 1, 1
            size: 1, 1
            orientation: 'vertical'
            padding: 10
            spacing: 10

            BoxLayout:

                size_hint: 1, 1
                orientation: 'horizontal'
                padding: 10
                spacing: 10

                Button:
                    id: add_villager
                    text: 'Add Villager'

                Button:
                    id: remove_villager
                    text: 'Remove Villager'

                Button:
                    id: change_page
                    text: 'Change Page'

            AnchorLayout:
                anchor_y: 'bottom'
                anchor_x: 'center'

                TextInput:
                    id: project_inp
                    size: 450, 75
                    size_hint: None, None
                    multiline: False
                    text: "Moin %s" % app.project
                    on_text_validate: app.next_screen(container)


            AnchorLayout:
                anchor_y: 'top'
                anchor_x: 'center'

                Button:
                    id: project_but
                    size: 200, 50
                    size_hint: None, None
                    background_color: 1,0.28,0,1
                    text: 'Open'

        BoxLayout:

            Label:
                text: 'Test text'
