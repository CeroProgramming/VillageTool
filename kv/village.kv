#:kivy 1.8.0

VillagesWidget:

    canvas.before:
        Color:
            rgba: 0.00,0.01,0.4,0.1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:

        size_hint: 1, 1
        orientation: 'vertical'
        padding: 10
        spacing: 10

        AnchorLayout:
            anchor_y: 'bottom'
            anchor_x: 'center'

            TextInput:
                id: project_inp
                size: 450, 75
                size_hint: None, None
                multiline: False
                hint_text: 'Choose your village..'
                hint_text_color: 1,1,1,1
                text: ''
                font_size: 40
                font_color: 1,0.98,0,1
                padding_y: 10
                padding_x: 5
                border: 4, 4, 4, 4
                background_color: 0,0.5,1,1
                foreground_color: 1,1,1,1
                on_text_validate: app.main(project_inp.text)


        AnchorLayout:
            anchor_y: 'top'
            anchor_x: 'center'

            Button:
                id: project_but
                size: 250, 65
                size_hint: None, None
                background_normal: 'src/white16x.png'
                background_color: 1,0.28,0,1
                font_size: 30
                text: 'Open'
                on_press: app.main(project_inp.text)
